<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.airlinereservationsystem.controllers.FlightController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <Label text="Flight Management">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TableView fx:id="flightTable" prefHeight="250.0">
              <columns>
                <TableColumn fx:id="flightNameColumn" prefWidth="150.0" text="Flight Name" />
                <TableColumn fx:id="ecoSeatsColumn" prefWidth="120.0" text="Economy Seats" />
                  <TableColumn fx:id="exeSeatsColumn" prefWidth="120.0" text="Executive Seats" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox spacing="10.0">
               <children>
                  <Button onAction="#navigateFirst" text="First" />
                  <Button onAction="#navigatePrevious" text="Previous" />
                  <Button onAction="#navigateNext" text="Next" />
                  <Button onAction="#navigateLast" text="Last" />
               </children>
            </HBox>
            <VBox spacing="5.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;">
               <children>
                  <Label text="Flight Details">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Flight Name" />
                              <TextField fx:id="flightNameField" promptText="e.g., Lesotho101" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Class Code" />
                              <TextField fx:id="classCodeField" promptText="e.g., BOTH" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Economy Seats" />
                              <TextField fx:id="ecoSeatsField" promptText="e.g., 150" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Executive Seats" />
                              <TextField fx:id="exeSeatsField" promptText="e.g., 30" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Button fx:id="addButton" onAction="#handleAddFlight" style="-fx-background-color: #27ae60;" text="Add" textFill="WHITE" />
                        <Button fx:id="updateButton" onAction="#handleUpdateFlight" style="-fx-background-color: #f39c12;" text="Update" textFill="WHITE" />
                        <Button fx:id="deleteButton" onAction="#handleDeleteFlight" style="-fx-background-color: #e74c3c;" text="Delete" textFill="WHITE" />
                        <Button onAction="#handleNew" style="-fx-background-color: #3498db;" text="New" textFill="WHITE" />
                     </children>
                     <padding>
                        <Insets top="15.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <Label fx:id="statusLabel" text="Status: Ready" textFill="#2c3e50">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>